<StackPane fx:id="rootPane" stylesheets="@../../css/dark-theme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Note.UpdateNoteController">
   <children>
      <AnchorPane id="AnchorPane" fx:id="mainContainer" prefHeight="424.0" prefWidth="464.0" styleClass="custom-pane" stylesheets="@../css/dark-theme.css">
         <children>
            <VBox prefHeight="404.0" prefWidth="464.0" spacing="10.0" AnchorPane.bottomAnchor="84.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Text fx:id="etudText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="about-text" text=" Student :  ">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Text>
                  <JFXTextField fx:id="ccText" labelFloat="true" promptText="CC">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="dsText" labelFloat="true" layoutX="20.0" layoutY="30.0" promptText="DS">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <JFXTextField fx:id="exText" labelFloat="true" promptText="EXAMEN">
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                  </JFXTextField>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            <HBox alignment="CENTER" layoutX="15.0" layoutY="327.0" prefHeight="34.0" prefWidth="434.0" spacing="30.0">
               <children>
                  <JFXButton fx:id="saveButton" onAction="#addBook" prefHeight="66.0" prefWidth="100.0" text="Save" />
                  <JFXButton fx:id="cancelButton" layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="66.0" prefWidth="100.0" text="Cancel" />
               </children>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
